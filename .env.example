# Environment Variables â€” Copy this file to .env and fill in your values
# =============================================================================

# --- Database (PostgreSQL) ---
# For local dev: use your local PostgreSQL credentials
# For production (Supabase): use connection pooler credentials
#   Host format: aws-0-{region}.pooler.supabase.com
#   Port: 6543 (pooler) or 5432 (direct)
#   User format: postgres.{project-ref}
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio
DB_USER=postgres
DB_PASSWORD=postgres

# --- AWS General ---
# IMPORTANT: Set this to match your S3 bucket's actual region
# Check with: aws s3api get-bucket-location --bucket YOUR-BUCKET-NAME
AWS_REGION=us-east-2

# --- AWS Credentials (for production on Render) ---
# Create IAM user with S3 access and generate access keys
# Not needed for local dev if USE_LOCAL_STORAGE=true
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# --- AWS S3 (project image storage) ---
S3_BUCKET=portfolio-images-yourname
# Production: Set to "false" to use S3 (requires AWS credentials above)
# Development: Set to "true" to save files locally in /uploads (no AWS needed)
USE_LOCAL_STORAGE=true
LOCAL_UPLOAD_DIR=uploads

# --- AWS SES (contact form email notifications) ---
SES_SENDER_EMAIL=noreply@yourdomain.com
SES_RECIPIENT_EMAIL=your-email@example.com
# Set to "false" to send real emails via SES; "true" logs to console
USE_LOCAL_EMAIL=true

# --- Admin Auth ---
# Simple password for the admin page (change this!)
ADMIN_PASSWORD=admin123

# --- Flask ---
SECRET_KEY=change-this-to-a-random-string-in-production
